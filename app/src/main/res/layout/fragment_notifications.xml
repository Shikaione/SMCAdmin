<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    tools:context=".PlaceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:paddingLeft="@dimen/padding_layout_login"
        android:paddingRight="@dimen/padding_layout_login"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tvNotification"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/etNotificationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:lines="3"
            android:maxLines="5"/>

        <Button
            android:id="@+id/sendNotification"
            style="@style/account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryLight"
            android:text="@string/send_notification" />


    </LinearLayout>

</FrameLayout>